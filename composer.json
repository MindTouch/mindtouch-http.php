{
  "name": "mindtouch/mindtouch-http",
  "description": "A PHP library for interacting with the MindTouch REST API",
  "type": "library",
  "license": "Apache-2.0",
  "authors" : [
    {
      "name": "James Andrew Vaughn",
      "email": "andyv@mindtouch.com",
      "role": "lead maintainer"
    }
  ],
  "support": {
    "issues": "https://github.com/mindtouch/mindtouch-http.php/issues"
  },
  "require": {
    "php": "^8.1.12",
    "modethirteen/hyperplug": "dev-main-php8",
    "modethirteen/type-ex": "dev-main-php8",
    "modethirteen/xarray": "dev-main-php8",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-curl": "*"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/MindTouch/TypeEx",
      "no-api": true
    },
    {
      "type": "vcs",
      "url": "https://github.com/MindTouch/Xarray.php",
      "no-api": true
    },
    {
      "type": "vcs",
      "url": "https://github.com/MindTouch/HyperPlug",
      "no-api": true
    }
  ],
  "require-dev": {
    "phpstan/phpstan": "^1.9.3",
    "phpunit/phpunit": "~9.4.3",
    "rector/rector": "^0.15.1"
  },
  "autoload": {
    "psr-4": {
      "MindTouch\\Http\\": ["src/"]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MindTouch\\Http\\Tests\\": ["tests/"]
    }
  }
}
